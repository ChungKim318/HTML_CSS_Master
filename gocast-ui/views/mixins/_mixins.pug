mixin menuItem(text, icon = '../../images/icons/icon-home.svg', href = '#')
  li.menu-item 
    a.menu-link(href= href)
      //- img(src= icon, alt="home").menu-icon
      span.menu-icon 
        if icon 
          case icon
            when 'icon-home'
              include ../icons/_icon-home
            when 'icon-chart'
              include ../icons/_icon-chart
            when 'icon-3dcube'
              include ../icons/_icon-3dcube
            when 'icon-play'
              include ../icons/_icon-play
            when 'icon-subscriptions'
              include ../icons/_icon-subscriptions
            when 'icon-discovery'
              include ../icons/_icon-discovery
            when 'icon-microphone'
              include ../icons/_icon-microphone
            when 'icon-user'
              include ../icons/_icon-user
            when 'icon-adduser'
              include ../icons/_icon-adduser
            when 'icon-medal'
              include ../icons/_icon-medal
      span.menu-text= text

mixin toggle()
  label.toggle
    input(type="checkbox", name="")
    .toggle-main
      .toggle-spinner 

mixin button(icon = false, title = "")
  button.button.button-primary 
  if icon
    include ../icons/_icon-play
  span= title 


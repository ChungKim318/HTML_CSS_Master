mixin hotelItem(image, price, title, review, reviewCount, duration, tourPrice)
  .hotel-item
    .hotel-top
      img.hotel-image(src= image, alt='bali')
      span.hotel-price= price
    .hotel-content
      h3.hotel-title= title
      .hotel-rating
        .hotel-review
          .hotel-star
            img(src='./images/star.png', alt='hotel-rating')
          .hotel-review-count
            span= review
              |  (#{reviewCount} reviews)
        span.hotel-duration Duration: #{duration}
      a.hotel-button(href='https://evondev.com', target='_blank', rel='noopener noreferrer') Tours Price $#{tourPrice}

mixin popularItem()
